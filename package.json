{
  "name": "clickhouse-lsp",
  "displayName": "ClickHouse LSP",
  "description": "Language Server Protocol for ClickHouse SQL with syntax highlighting",
  "version": "0.1.0",
  "publisher": "clickhouse",
  "license": "MIT",
  "bin": {
    "clickhouse-lsp": "./bin/clickhouse-lsp"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "clickhousesql",
        "aliases": [
          "ClickHouse SQL",
          "clickhouse"
        ],
        "extensions": [
          ".sql"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "ClickHouse LSP",
      "properties": {
        "clickhouseLsp.formatPath": {
          "type": "string",
          "default": "clickhouse-format",
          "description": "Path to clickhouse-format binary. Defaults to searching in PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.11",
    "web-tree-sitter": "^0.25.10"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.3.0"
  }
}
